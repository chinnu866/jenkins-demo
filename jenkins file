@Library('shared-lib') _

pipeline {
    agent any

    environment {
        IMAGE_NAME = "chinnu866/demo-app"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/chinnu866/jenkins-demo.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building application..."
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
            }
        }

        stage('Docker Build & Push') {
            steps {
                dockerBuildPush(IMAGE_NAME, 'dockerhub-creds')
            }
        }
    }
}
